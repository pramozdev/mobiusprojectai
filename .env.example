# Ambiente
FLASK_ENV=development
PORT=5000

# Segurança
SECRET_KEY=gerar-32-caracteres-aqui
FLASK_SECRET_KEY=gerar-32-caracteres-aqui

# Banco de Dados
# SQLite (desenvolvimento)
DATABASE_URL=sqlite:///instance/app.db

# PostgreSQL (produção)
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/nome_db

# Redis (produção)
REDIS_URL=redis://localhost:6379/0

# Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-app-password
MAIL_DEFAULT_SENDER=seu-email@gmail.com

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# OpenAI (opcional)
OPENAI_API_KEY=sk-sua-chave-openai
OPENAI_MODEL=gpt-3.5-turbo

# Sentry (monitoramento)
SENTRY_DSN=https://sua-chave-sentry@sentry.io/id

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Cache
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/2

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
